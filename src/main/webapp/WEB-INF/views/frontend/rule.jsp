					$(window).scroll(
							function() {
								if (timer) {
									clearTimeout(timer);
								}
								timer = setTimeout(function() {
									var index = findIndex(scrollTops,
											window.scrollY);

									$("#JMRuleTip .JMActive").removeClass(
											"JMActive");
									$("#JMRuleTip .JMItem:eq(" + index + ")")
											.addClass("JMActive");
								}, 100);
							});
